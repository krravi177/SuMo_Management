<mvc:View
    controllerName="com.dash.employeedashboard.controller.ProjectManager"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:uxap="sap.uxap"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:svm="sap.ui.comp.smartvariants"
>
    <Page title="Welcome To ProjectManager Page">
        <content>
            <uxap:ObjectPageLayout
                id="ObjectPageLayoutPM"
                upperCaseAnchorBar="false"
            >
                <uxap:headerTitle>
					<uxap:ObjectPageDynamicHeaderTitle>
                    <uxap:actions>
                      <VBox
                id="pmPageHeadVBox"
                fitContainer="true"
            >
                <OverflowToolbar
                    id="pmPageHeadVBoxOt"
                    class="sapFDynamicPageAlignContent"
                >
                    <ToolbarSpacer />
                    
                    <Button
                        icon="sap-icon://add"
                        text="Add New SubProject"
                        tooltip="Add New SubProject"
                        press=".addSubProjectForm"
                        
                    />
                    <Button
                        icon="sap-icon://sort"
                        text="Sort"
                        
                        press=".onSort"
                    />
                    <Button
                        text="Log Out"
                        
                        press="onLogOutManager"
                    />
                    
                </OverflowToolbar>
            </VBox>
                    	</uxap:actions>
					</uxap:ObjectPageDynamicHeaderTitle>
                    	</uxap:headerTitle>


                <uxap:sections>
                    <uxap:ObjectPageSection
                        titleUppercase="false"
                        title="SubProject Details"
                    >
                        <uxap:subSections>
                            <uxap:ObjectPageSubSection titleUppercase="false">
                                <uxap:blocks>
                                    <VBox>
                                        <HBox justifyContent="SpaceAround">
                                            <GenericTile
                                                header="Total Projects"
                                                class="customTileBackground" 
                                                press=".onTilePress"
                                                frameType="OneByHalf"
                                            >
                                                <TileContent>
                                                    <NumericContent
                                                        id="totalProjectPm"
                                                        value="0"
                                                    />
                                                </TileContent>
                                            </GenericTile>
                                             <GenericTile
                                                header="Total SubProjects"
                                                class="customTileBackground" 
                                                press=".onTilePress"
                                                frameType="OneByHalf"
                                            >
                                                <TileContent>
                                                    <NumericContent
                                                        id="totalSubprojects"
                                                        value="0"
                                                    />
                                                </TileContent>
                                            </GenericTile>

                                            <GenericTile
                                                header="Total Employees"
                                                class="customTileBackground" 
                                                press=".onTilePress"
                                                frameType="OneByHalf"
                                            >
                                                <TileContent>
                                                    <NumericContent
                                                        id="totalEmployeesPm"
                                                        value="0"
                                                    />
                                                </TileContent>
                                            </GenericTile>

                                            <GenericTile
                                                header="Running Projects"
                                                 class="customTileBackground" 
                                                press=".onTilePress"
                                                frameType="OneByHalf"
                                            >
                                                <TileContent>
                                                    <NumericContent
                                                        id="runningProjectsPm"
                                                        value="0"
                                                    />
                                                </TileContent>
                                            </GenericTile>
                                        </HBox>
                                    </VBox>
                                </uxap:blocks>
                            </uxap:ObjectPageSubSection>
                        </uxap:subSections>
                    </uxap:ObjectPageSection>

                    <uxap:ObjectPageSection>
                        <uxap:subSections>
                            <uxap:ObjectPageSubSection titleUppercase="false">
                                <uxap:blocks>
                                    <VBox>
                                        <fb:FilterBar
                                            id="filterbarPM"
                                            persistencyKey="myPersKey"
                                            useToolbar="false"
                                            search=".onSearch"
                                            filterChange=".onFilterChange"
                                            afterVariantLoad=".onAfterVariantLoad"
                                        >
                                            <fb:filterGroupItems>
                                                <fb:FilterGroupItem
                                                    name="projectId"
                                                    label="Project ID"
                                                    groupName="Group1"
                                                    visibleInFilterBar="true"
                                                >
                                                    <fb:control>
                                                        <MultiComboBox
                                                            name="projectId"
                                                            selectionChange=".onSelectionChange"
                                                            items="{
												                                    path: '/SubProjects',
												                                     templateShareable: true
										                                              	}"
                                                        >
                                                            <core:Item
                                                                key="{projectId}"
                                                                text="{projectId}"
                                                            />
                                                        </MultiComboBox>
                                                    </fb:control>
                                                </fb:FilterGroupItem>
                                                <fb:FilterGroupItem
                                                    name="moduleName"
                                                    label="Module Name"
                                                    groupName="Group1"
                                                    visibleInFilterBar="true"
                                                >
                                                    <fb:control>
                                                        <MultiComboBox
                                                            name="moduleName"
                                                            selectionChange=".onSelectionChange"
                                                            items="{
												path: '/SubProjects',
												templateShareable: true
											}"
                                                        >
                                                            <core:Item
                                                                key="{moduleName}"
                                                                text="{moduleName}"
                                                            />
                                                        </MultiComboBox>
                                                    </fb:control>
                                                </fb:FilterGroupItem>
                                                <fb:FilterGroupItem
                                                    name="projectManagerId"
                                                    label="Manager ID"
                                                    groupName="Group1"
                                                    visibleInFilterBar="true"
                                                >
                                                    <fb:control>
                                                        <MultiComboBox
                                                            name="projectManagerId"
                                                            selectionChange=".onSelectionChange"
                                                            items="{
												path: '/SubProjects',
												templateShareable: true
											}"
                                                        >
                                                            <core:Item
                                                                key="{projectManagerId}"
                                                                text="{projectManagerId}"
                                                            />
                                                        </MultiComboBox>
                                                    </fb:control>
                                                </fb:FilterGroupItem>
                                            </fb:filterGroupItems>
                                        </fb:FilterBar>

                                        <Table
                                            id="subprojectTablePM"
                                            items="{/SubProjects}"
                                            mode="SingleSelectMaster"
                                            growing="true" 
                                            growingThreshold="10"
                                        >
                                            <columns>
                                             <Column>
                                                    <Text
                                                        text="Module ID"
                                                    />
                                                </Column>
                                            
                                                <Column>
                                                    <Text
                                                        text="Project ID"
                                                    />
                                                </Column>
                                                <Column>
                                                    <Text
                                                        text="Module Name"
                                                    />
                                                </Column>
                                                <Column>
                                                    <Text text="Assigned Employee" />
                                                </Column>
                                                <Column>
                                                    <Text text="Manager ID" />
                                                </Column>
                                                <Column>
                                                    <Text
                                                        text="Time Assigned"
                                                    />
                                                </Column>
                                               
                                                <Column>
                                                    <Text
                                                        text="Module Status"
                                                    />
                                                </Column>
                                                <Column>
                                                    <Text
                                                        text="Created By"
                                                    />
                                                </Column>
                                                <Column>
                                                    <Text
                                                        text="Modified By"
                                                    />
                                                </Column>
                                              
                                                <Column>
                                                    <Text
                                                        text="Start Date"
                                                    />
                                                </Column>
                                                <Column>
                                                    <Text
                                                        text="End Date"
                                                    />
                                                </Column>
                                                 <Column>
                                                    <Text
                                                        text="Status"
                                                    />
                                                </Column>
                                            </columns>

                                            <items>
                                                <ColumnListItem  type="Navigation" press="onNav" >
                                                    <cells>
                                                     <Text
                                                            text="{moduleId}"
                                                        />
                                                        <Text
                                                            text="{projectId}"
                                                        />
                                                         <Text
                                                            text="{moduleName}"
                                                        />
                                                        <Text
                                                            text="{assignedToE}"
                                                        />
                                                        <Text text="{projectManagerId}" />
                                                        <Text
                                                            text="{timeAssigned}"
                                                        />
                                                    
                                                        <ObjectStatus
                    text="{moduleStatus}"
                    state="{= ${moduleStatus} === 'Completed' ? 'Success' : 
                             ${moduleStatus} === 'Active' ? 'Warning' : 
                             'Error'}"
                    class="{= ${moduleStatus} === 'Completed' ? 'myStatusSuccess' : 
                             ${moduleStatus} === 'Active' ? 'myStatusWarning' : 
                             'myStatusError'}"
                />
                                                        <Text
                                                            text="{createdBy}"
                                                        />
                                                        <Text
                                                            text="{modifiedBy}"
                                                        />

                                                        <Text
                                                            text="{startDate}"
                                                        />
                                                         <Text
                                                            text="{endDate}"
                                                        />

                                                       
                                                       <ObjectStatus
                                                            text="{status}"
                                                            state="{= ${status} === 'Completed' ? 'Success' : ${status} === 'InProgress' ? 'Warning' : 'Error'}"
                                                            class="myStatus{= ${status} === 'Completed' ? 'Success' : ${status} === 'InProgress' ? 'Warning' : 'Error'}"
                                                        />
                                                    </cells>
                                                </ColumnListItem>
                                            </items>
                                        </Table>
                                    </VBox>
                                </uxap:blocks>
                            </uxap:ObjectPageSubSection>
                        </uxap:subSections>
                    </uxap:ObjectPageSection>
                </uxap:sections>
            </uxap:ObjectPageLayout>
        </content>
    </Page>
</mvc:View>
