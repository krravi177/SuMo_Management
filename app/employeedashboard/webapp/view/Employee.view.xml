<mvc:View
    controllerName="com.dash.employeedashboard.controller.Employee"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:uxap="sap.uxap"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:svm="sap.ui.comp.smartvariants"
>
    <Page
        title="Welcome To Employee Page"
        showNavButton="true"
        navButtonPress="onNavBack"
        class="sapUiResponsiveContentPadding"
    >
        <content>
            <uxap:ObjectPageLayout
                id="ObjectPageLayoutEmployee"
                upperCaseAnchorBar="false"
            >
                <uxap:headerContent>
                    <SearchField
                        width="50%"
                        placeholder="Search for employee directory..."
                    />

                    <Button
                        text="Add New Employee"
                        icon="sap-icon://add"
                        press="newEmployeeFregOpen"
                    />
                    <Button
                        text="Go To New Page"
                        press="onNav"
                    />
                </uxap:headerContent>

                <uxap:sections>
                    <uxap:ObjectPageSection
                        titleUppercase="false"
                        title="Employee Details"
                    >
                        <uxap:subSections>
                            <uxap:ObjectPageSubSection titleUppercase="false">
                                <uxap:blocks>
                                    <HBox>
                                        <GenericTile
                                            class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
                                            header="Total Project"
                                            subheader=""
                                            press="press"
                                            frameType="OneByHalf"
                                        >
                                            <TileContent
                                                unit=""
                                                footer=""
                                            >
                                                <NumericContent
                                                    value=""
                                                    withMargin="false"
                                                />
                                            </TileContent>
                                        </GenericTile>
                                        <GenericTile
                                            class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
                                            header="Total Employees"
                                            subheader=""
                                            press="press"
                                            frameType="OneByHalf"
                                        >
                                            <TileContent
                                                unit=""
                                                footer=""
                                            >
                                                <NumericContent
                                                    value="y"
                                                    withMargin="false"
                                                />
                                            </TileContent>
                                        </GenericTile>

                                        <GenericTile
                                            class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
                                            header="Running Projects"
                                            subheader=""
                                            press="press"
                                            frameType="OneByHalf"
                                        >
                                            <TileContent
                                                unit=""
                                                footer=""
                                            >
                                                <NumericContent
                                                    value="x"
                                                    withMargin="false"
                                                />
                                            </TileContent>
                                        </GenericTile>
                                    </HBox>
                                </uxap:blocks>
                            </uxap:ObjectPageSubSection>
                        </uxap:subSections>
                    </uxap:ObjectPageSection>

                    <uxap:ObjectPageSection>
                        <uxap:subSections>
                            <uxap:ObjectPageSubSection titleUppercase="false">
                                <uxap:blocks>
                                    <VBox>
                                        <fb:FilterBar
                                            id="filterbar"
                                            persistencyKey="myPersKey"
                                            useToolbar="false"
                                            search=".onSearch"
                                            filterChange=".onFilterChange"
                                            afterVariantLoad=".onAfterVariantLoad"
                                        >
                                            <fb:filterGroupItems>
                                                <fb:FilterGroupItem
                                                    name="Project ID"
                                                    label="Project ID"
                                                    groupName="Group1"
                                                    visibleInFilterBar="true"
                                                >
                                                    <fb:control>
                                                        <MultiComboBox
                                                            name="Project ID"
                                                            selectionChange=".onSelectionChange"
                                                            items="{
												path: 'projectId',
												templateShareable: true
											}"
                                                        >
                                                            <core:Item
                                                                key=""
                                                                text=""
                                                            />
                                                        </MultiComboBox>
                                                    </fb:control>
                                                </fb:FilterGroupItem>
                                                <fb:FilterGroupItem
                                                    name="Project Name"
                                                    label="Project Name"
                                                    groupName="Group1"
                                                    visibleInFilterBar="true"
                                                >
                                                    <fb:control>
                                                        <MultiComboBox
                                                            name="Project Name"
                                                            selectionChange=".onSelectionChange"
                                                            items="{
												path: '',
												templateShareable: true
											}"
                                                        >
                                                            <core:Item
                                                                key=""
                                                                text=""
                                                            />
                                                        </MultiComboBox>
                                                    </fb:control>
                                                </fb:FilterGroupItem>
                                                <fb:FilterGroupItem
                                                    name="Client Name"
                                                    label="Client Name"
                                                    groupName="Group1"
                                                    visibleInFilterBar="true"
                                                >
                                                    <fb:control>
                                                        <MultiComboBox
                                                            name="Client Name"
                                                            selectionChange=".onSelectionChange"
                                                            items="{
												                                       path: '',
											                                        	templateShareable: true
										                                            	}"
                                                        >
                                                            <core:Item
                                                                key=""
                                                                text=""
                                                            />
                                                        </MultiComboBox>
                                                    </fb:control>
                                                </fb:FilterGroupItem>
                                            </fb:filterGroupItems>
                                        </fb:FilterBar>
                                        <Table
                                            id="employeeTable"
                                            items="{/Employees}"
                                            itemPress=".onItemPressed"
                                            mode="SingleSelectMaster"
                                            headerText="{i18n>ListOfAllEmployees}"
                                             growing="true" 
                                            growingThreshold="10"
                                        >
                                            <headerToolbar>
                                                <Toolbar>
                                                    <Title
                                                        text="{i18n>Employees}"
                                                        level="H2"
                                                    />
                                                    <ToolbarSpacer />
                                                    <SearchField
                                                        id="searchFieldh"
                                                        search=".onSearchEmployeesTable"
                                                        width="50%"
                                                    />
                                                    <Button
                                                        icon="sap-icon://sort"
                                                        press=".onSortButtonPressed"
                                                    />
                                                </Toolbar>
                                            </headerToolbar>
                                            <columns>
                                                <Column>
                                                    <Text
                                                        text="Employee Code"
                                                    />
                                                </Column>
                                                <Column>
                                                    <Text
                                                        text="Employee Name"
                                                    />
                                                </Column>
                                                <Column>
                                                    <Text text="Rating" />
                                                </Column>
                                                <Column>
                                                    <Text text="Manager" />
                                                </Column>
                                                <Column>
                                                    <Text
                                                        text="Time Taken (hours)"
                                                    />
                                                </Column>
                                                <Column>
                                                    <Text
                                                        text="Permission to Edit"
                                                    />
                                                </Column>
                                                <Column>
                                                    <Text
                                                        text="Permission to View"
                                                    />
                                                </Column>
                                                <Column>
                                                    <Text
                                                        text="Permission to Create Project"
                                                    />
                                                </Column>
                                                <Column>
                                                    <Text
                                                        text="Permission to Create Sub-Project"
                                                    />
                                                </Column>
                                                <Column>
                                                    <Text
                                                        text="Permission to Create Employee"
                                                    />
                                                </Column>
                                                
                                            </columns>

                                            <items>
                                                <ColumnListItem type="Active">
                                                    <cells>
                                                        <Text
                                                            text="{empCode}"
                                                        />
                                                        <Text
                                                            text="{empName}"
                                                        />
                                                        <Text text="{rating}" />
                                                        <Text
                                                            text="{managerId}"
                                                        />
                                                        <!-- Manager's Name from the Association -->
                                                        <Text
                                                            text="{timeTaken}"
                                                        />
                                                        <Text
                                                            text="{permissionToEdit}"
                                                        />
                                                        <Text
                                                            text="{permissionToView}"
                                                        />
                                                        <Text
                                                            text="{permissionToCreateP}"
                                                        />
                                                        <Text
                                                            text="{permissionToCreateSP}"
                                                        />
                                                        <Text
                                                            text="{permissionToCreateE}"
                                                        />

                                                       
                                                    </cells>
                                                </ColumnListItem>
                                            </items>
                                        </Table>
                                    </VBox>
                                </uxap:blocks>
                            </uxap:ObjectPageSubSection>
                        </uxap:subSections>
                    </uxap:ObjectPageSection>
                </uxap:sections>
            </uxap:ObjectPageLayout>
        </content>
    </Page>
</mvc:View>
