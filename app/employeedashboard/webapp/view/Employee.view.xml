<mvc:View
    controllerName="com.dash.employeedashboard.controller.Employee"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:uxap="sap.uxap"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:svm="sap.ui.comp.smartvariants"
>
    <Page
        title="Welcome To Employee Page"
        class="sapUiResponsiveContentPadding"
    >
        <content>
            <uxap:ObjectPageLayout
                id="ObjectPageLayoutEmployee"
                upperCaseAnchorBar="false"
            >
<uxap:headerTitle>
					<uxap:ObjectPageDynamicHeaderTitle>
                    <uxap:actions>
                      <VBox
                id="empPageHeadVBox"
                fitContainer="true"
            >
                <OverflowToolbar
                    id="empPageHeadVBoxOt"
                    class="sapFDynamicPageAlignContent"
                >
                    <ToolbarSpacer />
                    
                    <Button
                        icon="sap-icon://add"
                        text="Add New Project"
                        tooltip="Add New Project"
                        press=".addForm"
                        
                    />
                    <Button
                        icon="sap-icon://sort"
                        text="Sort"
                        
                        press=".onSort"
                    />
                    <Button
                        text="Log Out"
                        
                        press="onLogOutEmployee"
                    />
                    
                </OverflowToolbar>
            </VBox>
                    	</uxap:actions>
					</uxap:ObjectPageDynamicHeaderTitle>
                    	</uxap:headerTitle>
                
                <uxap:sections>
                    <uxap:ObjectPageSection
                        titleUppercase="false"
                        title="Employee Details"
                    >
                        <uxap:subSections>
                            <uxap:ObjectPageSubSection titleUppercase="false">
                                <uxap:blocks>
                                    <VBox>
                                        <HBox justifyContent="SpaceAround">
                                            <GenericTile
                                                header="Total Projects"
                                                class="customTileBackground" 
                                                press=".onTilePress"
                                                frameType="OneByHalf"
                                            >
                                                <TileContent>
                                                    <NumericContent
                                                        id="totalProjectEmp"
                                                        value="0"
                                                    />
                                                </TileContent>
                                            </GenericTile>

                                            <GenericTile
                                                header="Total Employees"
                                                class="customTileBackground" 
                                                press=".onTilePress"
                                                frameType="OneByHalf"
                                            >
                                                <TileContent>
                                                    <NumericContent
                                                        id="totalEmployeesEmp"
                                                        value="0"
                                                    />
                                                </TileContent>
                                            </GenericTile>

                                            <GenericTile
                                                header="Running Projects"
                                                 class="customTileBackground" 
                                                press=".onTilePress"
                                                frameType="OneByHalf"
                                            >
                                                <TileContent>
                                                    <NumericContent
                                                        id="runningProjectsEmp"
                                                        value="0"
                                                    />
                                                </TileContent>
                                            </GenericTile>
                                        </HBox>
                                    </VBox>
                                </uxap:blocks>
                            </uxap:ObjectPageSubSection>
                        </uxap:subSections>
                    </uxap:ObjectPageSection>

                    <uxap:ObjectPageSection>
                        <uxap:subSections>
                            <uxap:ObjectPageSubSection titleUppercase="false">
                                <uxap:blocks>
                                    <VBox>
                                        <fb:FilterBar
                                            id="filterbar"
                                            persistencyKey="myPersKey"
                                            useToolbar="false"
                                            search=".onSearch"
                                            filterChange=".onFilterChange"
                                            afterVariantLoad=".onAfterVariantLoad"
                                        >
                                            <fb:filterGroupItems>
                                                <fb:FilterGroupItem
                                                    name="Employee ID"
                                                    label="Employee ID"
                                                    groupName="Group1"
                                                    visibleInFilterBar="true"
                                                >
                                                    <fb:control>
                                                        <MultiComboBox
                                                            name="Employee ID"
                                                            selectionChange=".onSelectionChange"
                                                            items="{
												path: '/Employees',
												templateShareable: true
											}"
                                                        >
                                                            <core:Item
                                                                key="{empCode}"
                                                                text="{empCode}"
                                                            />
                                                        </MultiComboBox>
                                                    </fb:control>
                                                </fb:FilterGroupItem>
                                                <fb:FilterGroupItem
                                                    name="Employee Name"
                                                    label="Employee Name"
                                                    groupName="Group1"
                                                    visibleInFilterBar="true"
                                                >
                                                    <fb:control>
                                                        <MultiComboBox
                                                            name="Employee Name"
                                                            selectionChange=".onSelectionChange"
                                                            items="{
												path: '/Employees',
												templateShareable: true
											}"
                                                        >
                                                            <core:Item
                                                                key="{empName}"
                                                                text="{empName}"
                                                            />
                                                        </MultiComboBox>
                                                    </fb:control>
                                                </fb:FilterGroupItem>
                                                <fb:FilterGroupItem
                                                    name="Manager ID"
                                                    label="Manager ID"
                                                    groupName="Group1"
                                                    visibleInFilterBar="true"
                                                >
                                                    <fb:control>
                                                        <MultiComboBox
                                                            name="Manager ID"
                                                            selectionChange=".onSelectionChange"
                                                            items="{
												                                       path: '/Employees',
											                                        	templateShareable: true
										                                            	}"
                                                        >
                                                            <core:Item
                                                                key="{managerId}"
                                                                text="{managerId}"
                                                            />
                                                        </MultiComboBox>
                                                    </fb:control>
                                                </fb:FilterGroupItem>
                                            </fb:filterGroupItems>
                                        </fb:FilterBar>
                                        <Table
                                            id="employeesTable"
                                            items="{/Employees}"
                                            itemPress=".onItemPressed"
                                            mode="SingleSelectMaster"
                                            
                                             growing="true" 
                                            growingThreshold="10"
                                        >
                                          
                                            <columns>
                                                <Column>
                                                    <Text
                                                        text="Employee Code"
                                                    />
                                                </Column>
                                                <Column>
                                                    <Text
                                                        text="Employee Name"
                                                    />
                                                </Column>
                                                <Column>
                                                    <Text text="Rating" />
                                                </Column>
                                                <Column>
                                                    <Text text="Manager" />
                                                </Column>
                                                <Column>
                                                    <Text
                                                        text="Time Taken (hours)"
                                                    />
                                                </Column>
                                                <Column>
                                                    <Text
                                                        text="Permission to Edit"
                                                    />
                                                </Column>
                                                <Column>
                                                    <Text
                                                        text="Permission to View"
                                                    />
                                                </Column>
                                                <Column>
                                                    <Text
                                                        text="Permission to Create Project"
                                                    />
                                                </Column>
                                                <Column>
                                                    <Text
                                                        text="Permission to Create Sub-Project"
                                                    />
                                                </Column>
                                                <Column>
                                                    <Text
                                                        text="Permission to Create Employee"
                                                    />
                                                </Column>
                                                
                                            </columns>

                                            <items>
                                                <ColumnListItem type="Active">
                                                    <cells>
                                                        <Text
                                                            text="{empCode}"
                                                        />
                                                        <Text
                                                            text="{empName}"
                                                        />
                                                        <Text text="{rating}" />
                                                        <Text
                                                            text="{managerId}"
                                                        />
                                                        <!-- Manager's Name from the Association -->
                                                        <Text
                                                            text="{timeTaken}"
                                                        />
                                                        <Text
                                                            text="{permissionToEdit}"
                                                        />
                                                        <Text
                                                            text="{permissionToView}"
                                                        />
                                                        <Text
                                                            text="{permissionToCreateP}"
                                                        />
                                                        <Text
                                                            text="{permissionToCreateSP}"
                                                        />
                                                        <Text
                                                            text="{permissionToCreateE}"
                                                        />

                                                       
                                                    </cells>
                                                </ColumnListItem>
                                            </items>
                                        </Table>
                                    </VBox>
                                </uxap:blocks>
                            </uxap:ObjectPageSubSection>
                        </uxap:subSections>
                    </uxap:ObjectPageSection>
                </uxap:sections>
            </uxap:ObjectPageLayout>
        </content>
    </Page>
</mvc:View>
