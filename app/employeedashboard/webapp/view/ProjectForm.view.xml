<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:form="sap.ui.layout.form"
    xmlns:layout="sap.uxap"
    controllerName="">

    <layout:ObjectPageLayout id="ObjectPageLayoutA" showHeaderContent="false">
        
        <!-- Header Title -->
        <layout:headerTitle>
            <layout:ObjectPageHeader
                objectTitle="Project Registration"
                objectSubtitle="Fill the details below to create a project"
                showTitleSelector="false"
            />
        </layout:headerTitle>

        <!-- Main Content Section -->
        <layout:sections>
            <layout:ObjectPageSection title="Project Details">
                <layout:subSections>
                    <layout:ObjectPageSubSection>
                        <layout:blocks>
                            
                            <f:SimpleForm
                                id="SimpleFormToolbar"
                                editable="true"
                                layout="ResponsiveGridLayout"
                                labelSpanXL="4"
                                labelSpanL="3"
                                labelSpanM="4"
                                labelSpanS="12"
                                adjustLabelSpan="false"
                                emptySpanXL="0"
                                emptySpanL="4"
                                emptySpanM="0"
                                emptySpanS="0"
                                columnsXL="2"
                                columnsL="2"
                                columnsM="2"
                            >
                                <f:content>

                                    <Label text="Project ID" />
                                    <Input id="pProjectId" />

                                    <Label text="Project Name" />
                                    <Input id="pProjectName" />

                                    <Label text="Assigned To Project" />
                                    <Input id="pAssignedTo" />

                                    <Label text="Time Assigned" />
                                    <Input id="pTimeAssigned" />

                                    <Label text="Changes" />
                                    <Input id="pChanges" />

                                    <Label text="Client Name" />
                                    <Input id="pClientName" />

                                    <Label text="Description" />
                                    <Input id="pDescription" />

                                    <Label text="Urgency" />
                                    <Input id="pUrgency" />

                                    <Label text="Created By" />
                                    <Input id="pCreateBy" />

                                    <Label text="Modified By" />
                                    <Input id="pModifieBy" />

                                    <Label text="Start Date" />
                                    <DatePicker id="pStartDate" />

                                    <Label text="End Date" />
                                    <DatePicker id="pEndDate" />

                                    <Label text="Status" />
                                    <Select id="Status" selectedKey="{pStatus}">
                                        <items>
                                            <core:Item text="OnTime" key="OnTime"/>
                                            <core:Item text="Delayed" key="Delayed"/>
                                            <core:Item text="Completed" key="Completed"/>
                                        </items>
                                    </Select>

                                    <!-- Action Buttons -->
                                    <Toolbar>
                                        <Button
                                            id="newProjectFormSubmitBton"
                                            text="Submit"
                                            type="Accept"
                                            press="onSubmitNewProjectForm"
                                        />
                                        <Button
                                            id="newProjectFormCancelBton"
                                            text="Cancel"
                                            type="Reject"
                                            press="onCancelNewProjectForm"
                                        />
                                    </Toolbar>

                                </f:content>
                            </f:SimpleForm>

                        </layout:blocks>
                    </layout:ObjectPageSubSection>
                </layout:subSections>
            </layout:ObjectPageSection>
        </layout:sections>
        
    </layout:ObjectPageLayout>

</mvc:View>
